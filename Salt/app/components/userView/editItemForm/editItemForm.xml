<Page xmlns="http://schemas.nativescript.org/tns.xsd" actionBarHidden="true" navigatedTo="onNavigatedTo" loaded="pageLoaded" id="userViewModelEditScreen" cssClass="screen">
    <GridLayout rows="auto, *">
        <GridLayout rows="auto, *" cssClass="page-header">
            <GridLayout cssClass="action-bar" columns="auto, *, auto">
                <Button text="Cancel" onTap="onCancelTap" />
                <Label col="1" text="{{ Email }}" cssClass="action-bar-title" />
                <Button col="2" text="Save" onTap="onSaveTap" />
            </GridLayout>
            <!-- Workaround for one sided border -->
            <StackLayout row="1" cssClass="action-bar-border" height="1"></StackLayout>
        </GridLayout>

        <StackLayout row="1">
            <ScrollView>

                <StackLayout row="1">


                    <GridLayout columns="*, *" rows="auto, auto" cssClass="form-item field field--text" id="emailField">


                        <Label text="Email" cssClass="label" col="0" row="1" />


                        <TextField col="1" row="1" text="{{ email }}" />

                        <!-- email content -->

                    </GridLayout>

                    <StackLayout cssClass="form-item-border" height="1"></StackLayout>
                    <!-- editableListForm46 additional fields -->

                </StackLayout>
                <!-- additional view content -->

            </ScrollView>
        </StackLayout>

    </GridLayout>
</Page>